@{
    ViewBag.Title = "shop";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

@model IEnumerable<QLBG.Models.SanPham>

<!-- Start Content -->
<div class="container py-5">
    <div class="row">
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <!-- Nội dung của danh mục -->
                                     @Html.Action("DanhMucPar", "DanhMuc")
                    
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            <div class="row">
                <div class="col-md-6">
                    <ul class="list-inline shop-top-menu pb-3 pt-1">
                        <li class="list-inline-item">
                            <a class="h3 text-dark text-decoration-none mr-3" href="#">All</a>
                        </li>
                        <li class="list-inline-item">
                            <a class="h3 text-dark text-decoration-none mr-3" href="#">Men's</a>
                        </li>
                        <li class="list-inline-item">
                            <a class="h3 text-dark text-decoration-none" href="#">Women's</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-6 pb-4">
                    <div class="d-flex">
                        <form id="sortForm" method="get">
                            <select class="form-control" name="sortOption" onchange="document.getElementById('sortForm').submit()">
                                <option value="Featured" @(ViewBag.SortOption == "Featured" ? "selected" : "")>Featured</option>
                                <option value="AtoZ" @(ViewBag.SortOption == "AtoZ" ? "selected" : "")>A to Z</option>
                                <option value="Price" @(ViewBag.SortOption == "Price" ? "selected" : "")>Price</option>
                                <option value="PriceGreaterThan100" @(ViewBag.SortOption == "PriceGreaterThan100" ? "selected" : "")>Price > 100</option>
                            </select>
                        </form>
                    </div>
                </div>

            </div>
            <div class="row">
                @foreach (var sanPham in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <img src="~/assets/Images/@sanPham.AnhChinh" class="img-fluid" alt="@sanPham.TenSanPham" style="width:100%;height:auto;">
                                <h3>@sanPham.TenSanPham</h3>
                                <p>@sanPham.Mota</p>
                                <p>Giá: @sanPham.DonViGia.ToString("C")</p>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="row">
                <div class="col-12 text-center">
                    <!-- Pagination Section -->
                    <ul class="pagination pagination-lg justify-content-end">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link rounded-0 mr-3 shadow-sm border-top-0 border-left-0 text-dark" href="@Url.Action("Shop", new { page = i })">@i</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Content -->
